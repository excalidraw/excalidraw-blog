{
  "cleanUrls": true,
  "redirects": [
    {
      "source": "/sitemap.xml",
      "destination": "https://plus.excalidraw.com/blog-sitemap.xml",
      "permanent": true
    },
    {
      "source": "/",
      "destination": "https://plus.excalidraw.com/blog",
      "permanent": true
    },
    {
      "source": "/(.*)/",
      "destination": "https://plus.excalidraw.com/blog/$1",
      "permanent": true
    },
    {
      "source": "/(.*)",
      "destination": "https://plus.excalidraw.com/blog/$1",
      "permanent": true
    }
  ]
}
